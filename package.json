{
  "name": "gravity-ui-remix-example",
  "version": "0.1.0",
  "keywords": [
    "react",
    "remix",
    "template",
    "typescript",
    "gravity",
    "uikit",
    "sass"
  ],
  "description": "Remix template with: typescript, sass and @gravity-ui packages",
  "repository": {
    "type": "git",
    "url": "https://github.com/gravity-ui/gravity-ui-remix-example"
  },
  "engines": {
    "node": ">=16"
  },
  "bugs": {
    "url": "https://github.com/gravity-ui/gravity-ui-remix-example/issues"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "run-s \"build:*\"",
    "build:css": "npm run generate:css -- --style=compressed",
    "build:remix": "remix build",
    "dev": "run-p \"dev:*\"",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix dev",
    "generate:css": "sass app/:app/",
    "start": "remix-serve build",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:styles": "stylelint '{styles,app}/**/*.scss'",
    "lint:prettier": "prettier --check '**/*.md'",
    "lint": "npm run lint:js && npm run lint:styles && npm run lint:prettier",
    "test": "exit 0"
  },
  "dependencies": {
    "@gravity-ui/icons": "^2.6.0",
    "@gravity-ui/uikit": "^5.25.0",
    "@remix-run/node": "^1.19.3",
    "@remix-run/react": "^1.19.3",
    "@remix-run/serve": "^1.19.3",
    "bem-cn-lite": "^4.1.0",
    "isbot": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@gravity-ui/browserslist-config": "^4.1.0",
    "@gravity-ui/eslint-config": "^3.1.1",
    "@gravity-ui/prettier-config": "^1.1.0",
    "@gravity-ui/stylelint-config": "^4.0.0",
    "@gravity-ui/tsconfig": "^1.0.0",
    "@remix-run/dev": "^1.19.3",
    "@remix-run/eslint-config": "^1.19.3",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "eslint": "^8.27.0",
    "husky": "^8.0.3",
    "npm-run-all": "4.1.5",
    "sass": "^1.68.0",
    "typescript": "^5.2.2"
  },
  "browserslist": [
    "extends @gravity-ui/browserslist-config"
  ],
  "lint-staged": {
    "*.{scss}": [
      "stylelint --fix --quiet"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --quiet",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
